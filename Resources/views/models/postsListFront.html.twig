{% extends 'FulgurioLightCMSBundle::base.html.twig' %}
{% block content %}
			<h1>{{ currentPage.title }}</h1>
			<br />
{% if posts is not empty %}
			<ul class="unstyled">
{%   for key, post in posts %}
				<li>
					<hr />
					<article>
						<h2>{{ post.title }}</h2>
						<span class="muted">{% trans with { '%DATE%' : post.createdAt|date('fulgurio.lightcms.datetime_format'|trans) } %}fulgurio.lightcms.posts_list.posted_at{% endtrans %}</span>
{{ post.content|raw }}
					</article>
				</li>
{%   endfor %}
			</ul>
{{ knp_pagination_render(posts, 'FulgurioLightCMSBundle::postsPagination.html.twig') }}
{% endif %}
{% endblock %}