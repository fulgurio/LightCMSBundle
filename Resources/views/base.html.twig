<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<title>{{ currentPage.title }}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="keywords" content="{{ currentPage.metavalue('meta_keywords') }}">
		<meta name="description" content="{{ currentPage.metavalue('meta_description') }}">
		<meta name="author" content="{{ currentPage.metavalue('meta_author') }}">
		<link href="{{ asset('bundles/fulguriolightcms/css/bootstrap.min.css') }}" rel="stylesheet">
		<link href="{{ asset('bundles/fulguriolightcms/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
		<link href="{{ asset('bundles/fulguriolightcms/css/styles.css') }}" rel="stylesheet">
		<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
		<!--[if lt IE 9]>
			<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>
	<body>
		<div class="container">
			<nav>
				<ul class="nav nav-tabs">
{% for child in pageRoot.children %}
{%   if child.status == 'published' %}
					<li{% if app.request.attributes.get('fullpath') == child.fullpath %} class="active"{% endif %}><a href="{{ path('LightCMS_Page', { fullpath: child.fullpath}) }}">{{ child.title }}</a></li>
{%   endif %}
{% endfor %}
				</ul>
			</nav>
{% block content %}{% endblock %}
		</div>
		<script src="{{ asset('bundles/fulguriolightcms/js/jquery.min.js') }}"></script>
		<script src="{{ asset('bundles/fulguriolightcms/js/bootstrap.min.js') }}"></script>
{% block javascript %}{% endblock %}
	</body>
</html>