<!DOCTYPE html>
<html dir="ltr" lang="fr-FR">
<head>
	<link rel="stylesheet" href="{{ asset('bundles/fulguriolightcms/css/bootstrap.min.css') }}" />
	<link rel="stylesheet" href="{{ asset('bundles/fulguriolightcms/css/styles-admin.css') }}" />
</head>
<body>
<form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
	<fieldset>
{%     if form.getChild('attachment').get('errors') %}
			<div class="alert alert-error">
{%       for error in form.getChild('attachment').get('errors') %}{{ error.messageTemplate|trans({}, 'admin') }}<br />{%   endfor %}
			</div>
{%     endif %}
			<div class="control-group avatar">
				<label class="control-label" for="f_attachment">{% trans from 'admin' %}fulgurio.lightcms.upload_file.picture_label{% endtrans %}</label>
				<div class="controls">
					<input type="file" id="f_attachment" class="input-file" name="{{ form.getChild('attachment').get('full_name') }}" />
				</div>
			</div>
			<div class="form-actions">
				<input type="hidden" name="{{ form.getChild('_token').get('full_name') }}" value="{{ form.getChild('_token').get('value') }}" />
				<button type="submit" class="btn btn-primary">{% trans from 'admin' %}fulgurio.lightcms.upload_file.send_button{% endtrans %}</button>
			</div>
	</fieldset>
</form>
</body>
</html>
